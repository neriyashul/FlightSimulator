<UserControl x:Class="FlightSimulator.Views.Windows.manual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulator.Views.Windows"
             xmlns:View="clr-namespace:FlightSimulator.Views"
             
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <View:Joystick Cursor="None"></View:Joystick>
        <Slider x:Name="slider" HorizontalAlignment="Left" TickPlacement="BottomRight" Value="0" Minimum="-1" Maximum="1" TickFrequency="0.1" VerticalAlignment="Center" Width="357" Margin="-52,177,0,188" Height="85" RenderTransformOrigin="0.454,1" FontSize="48" Cursor="None" ValueChanged="Slider_ValueChanged_1">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>

    </Grid>
</UserControl>
