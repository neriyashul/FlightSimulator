<Window x:Class="FlightSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightSimulator"
        mc:Ignorable="d"
        Title="MainWindow" Height="514.333" Width="800">

    <Window.Resources>
    </Window.Resources>
    <StackPanel>

        <TextBox x:Name="textBox" Height="400" TextWrapping="Wrap" KeyDown="OnKeyDownHandler" Text=""/>
        
        <WrapPanel>
            <Button x:Name="OKButton" Content="OK" Click="OKButton_Click"
                    HorizontalAlignment="Center" Width="83" Margin="200,0" FontSize="16" FontWeight="Bold" />
            <Button x:Name="ClearButton" Content="Clear" Click="ClearButton_Click"
                    HorizontalAlignment="Center" Width="83" Height="30" FontWeight="Bold" FontSize="16"  />
        </WrapPanel>
    </StackPanel>
</Window>
